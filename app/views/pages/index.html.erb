                            <input type="radio" name='gender1' checked><i class="fa fa-circle-o fa-2x"></i><i class="fa fa-check-circle-o fa-2x"></i> <span> I like chocolate icecream</span>
                          </label>
                          <label class="btn">
                            <input type="radio" name='gender1'><i class="fa fa-circle-o fa-2x"></i><i class="fa fa-check-circle-o fa-2x"></i><span> I prefer vanilla icecream</span>
                          </label>
                        </div>
                      </div>
                  </div>
              </div> 
          </div>
        <!-- /.container -->
    </div>
    <!-- /.content-section-a -->
  </div>
</div>
