<div class="container">
	
	<h4>Listing of Active Companies</h4>
	<h5><%= link_to "Create a new one", new_company_path %></h5>

	<table class="table">
		<th>Company Name</th>
		<th>Company Key</th>
		<th>Creation Date</th>
		<th>Edit</th>
		<th>Delete</th>

	<% @company.each do |company| %>
	<tr>
		<td><%= link_to company.name, company %></td>
		<td><%= company.company_key %></td>
		<td><%= company.created_at.strftime("%m/%d/%Y") %></td>
		<td><%= link_to edit_company_path(company), class: 'btn btn-default btn-sm' do %>
        <i class="fa fa-pencil-square-o"> Edit</i>
      <% end %></td>
		<td><%= link_to company_path(company), class: 'btn btn-default btn-sm', method: :delete, data: {confirm: "Are you sure you want to delete this company?"} do %>
        <i class="fa fa-trash-o"> Delete</i>
      <% end %></td>
	</tr>

	<% end %>
		</table>
</div>