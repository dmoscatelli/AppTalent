<header>
  <div class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <div class="navbar-header">
        <%= link_to (image_tag "goplex.png"), root_path, class: "nav navbar-left" %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
         <ul class="nav navbar-nav navbar-right">
            <li>
              <p class="navbar-text">
                 <li><%= link_to "How it works", :anchor => "anchor-point", id: "js-anchor" %></li>
                 <li><%= link_to "Register your company", "#" %></li>
                 <li><%= link_to "About", "#" %></li>
                 <li><%= link_to "Help", "#" %></li>
                <% if user_signed_in?%>
                  Logged in as:
                  <b> <%= current_user.email %> </b>
                  <%= link_to 'Log out', destroy_user_session_path, :method => :delete %>
                <% elsif admin_signed_in? %>
                   Logged in as:
                   <b><%= current_admin.email %> </b>
                   <%= link_to 'Log out', destroy_admin_session_path, :method => :delete %>
              </p> 
              <% else %>
            </li>
            <li><%= link_to "Sign in", new_user_session_path, id: "btn-custom-log" %></li>
               <% end %>
          </ul>
      </div>
    </div>
  </div>
  <% if current_user || current_admin %>
    <%= render 'shared/gem_header_info' %>
  <% end %>
</header>

